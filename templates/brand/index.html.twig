{% extends 'base.html.twig' %}

{% block title %}Gestion des Marques{% endblock %}

{% block body %}
    <div class="row pt-3">
        <h1>Gestion des Marques</h1>

        <table class="table text-center">
            <thead>
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for brand in brands %}
                <tr>
                    <td>{{ brand.name }}</td>
                    <td>
                        <a href="{{ path('app_brand_edit', {'id': brand.id}) }}"
                           class="btn btn-sm btn-success">Editer</a>
                        {{ include('brand/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucun enregistrement trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <a href="{{ path('app_brand_new') }}" class="btn btn-success">Créer un nouveau</a>
{% endblock %}
